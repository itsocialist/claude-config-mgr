{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "lib": ["ES2020"]
  },
  "include": ["electron.ts", "preload.ts"],
  "exclude": ["node_modules", ".next", "out", "dist"]
}